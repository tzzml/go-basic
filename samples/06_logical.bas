10 REM 逻辑运算示例
20 REM 演示 AND 和 OR 运算符
30 LET A = 1
40 LET B = 0
50 LET C = 1
60 PRINT "A = "; A; " (非零为真)"
70 PRINT "B = "; B; " (零为假)"
80 PRINT "C = "; C; " (非零为真)"
90 PRINT
100 PRINT "A AND B: "; A AND B
110 PRINT "A OR B: "; A OR B
120 PRINT "A AND C: "; A AND C
130 PRINT "B OR C: "; B OR C
140 PRINT
150 REM 复杂逻辑表达式
160 PRINT "(A OR B) AND C: "; (A OR B) AND C
170 PRINT "A AND (B OR C): "; A AND (B OR C)
180 END
